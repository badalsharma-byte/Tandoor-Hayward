# Uploads folder protection
# Only allow image files

# Disable PHP execution
<FilesMatch "\.php$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Only allow specific image types
<FilesMatch "(?i)\.(jpg|jpeg|png|gif|webp)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Prevent directory listing
Options -Indexes
